{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Car list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Brand</th>
                <th>Model</th>
                <th>Produceddate</th>
                <th>Cost</th>
                <th>Currency</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('car_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.brand }}</td>
                <td>{{ entity.model }}</td>
                <td>{% if entity.producedDate %}{{ entity.producedDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.cost }}</td>
                <td>{{ entity.currency }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('car_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('car_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('car_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
